CPPS:=$(wildcard *.cpp)
OBJS:=$(patsubst %.cpp, %.o, ${CPPS})
HS:=$(wildcard *.h)
CXXFLAGS=-g -O0 -std=c++20 -DDEBUG
CXX:=g++
INC:=-I../..
USGOV:=##str3##gov
USWALLET:=##str3##wallet
USTEST:=##str3##test
USTESTC1:=##str3##test-c1
LIBUSTEST:=lib##str3##test
CORE0:=$(shell realpath ../../../../core0)
CORE1:=$(shell realpath ../../../../core1)
LIBS:=-L../test -l${USTESTC1} -L${CORE0}/us/test -l${USTEST} -L${CORE0}/us/wallet -l${USWALLET} -L${CORE0}/us/gov -l${USGOV}
ARCH:=$(shell uname -m)

ifeq ($(ARCH),armv7l)
    LIBS+=-latomic
endif

RPATH:=-Wl,-rpath,../test -Wl,-rpath,${CORE0}/us/test -Wl,-rpath,${CORE0}/us/wallet -Wl,-rpath,${CORE0}/us/gov

USTESTX:=##str3##-test-c1

all: ${USTESTX}

${USTESTX}: ${OBJS}
	$(CXX) ${CXXFLAGS} ${RPATH} ${OBJS} ${LIBS} -lstdc++fs -pthread -o ${USTESTX}

%.o: %.cpp
	$(CXX) -fPIC -c ${CXXFLAGS} ${INC} $^ -o $@

clean:
	rm -f ${USTESTX}
	rm -f *.o

.PHONY: all clean

