CPPS:=$(wildcard *.cpp)
OBJS:=$(patsubst %.cpp, %.o, ${CPPS})
HS:=$(wildcard *.h)
FCGILIBS:=-lfastcgipp
CXXFLAGS=-g -O0 -std=c++20 -DDEBUG
CXX:=g++
EC:=$(shell pkg-config --libs libsecp256k1)
INC:=-I../..
USGOV:=##str3##gov
LIBUSGOV:=lib##str3##gov
USWALLET:=##str3##wallet
LIBUSWALLET:=lib##str3##wallet
LIBS:=-L../wallet -l${USWALLET} -L../gov -l${USGOV}
ARCH:=$(shell uname -m)

ifeq ($(ARCH),armv7l)
    LIBS+=-latomic
endif

ifneq (,$(findstring -g,${CXXFLAGS}))
    RPATH:=-Wl,-rpath,../wallet -Wl,-rpath,../gov
else
    RPATH:=
endif

USWALLETX:=##str3##-wallet

all: ${USWALLETX}

${USWALLETX}: ${OBJS}
#ifeq ($(WASM),1)
#	em++ ${CXXFLAGS} ${OBJS} -L../gov -L../wallet ${LIBS} ${EC} ${NC} ${LIBCRYPTO} -I../.. -pthread -lstdc++fs -o ${USHWALLET}_wasm
#else
	$(CXX) ${CXXFLAGS} ${RPATH} ${OBJS} ${LIBS} -lstdc++fs -pthread -o ${USWALLETX}
#endif

%.o: %.cpp
	$(CXX) -fPIC -c ${CXXFLAGS} ${INC} $^ -o $@

clean:
	rm -f ${USWALLETX}
	rm -f *.o

.PHONY: all clean


