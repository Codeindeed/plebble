CPPS:=$(wildcard *.cpp)
OBJS:=$(CPPS:.cpp=.o)
HS:=$(wildcard *.h)
CXXFLAGS = -g -O0 -std=c++20 -DDEBUG
CXX:=g++
EC:=$(shell pkg-config --libs libsecp256k1)
USGOV:=##str3##gov
LIBS:=-L../gov -l${USGOV} ${EC}
INC:=-I../..
ARCH:=$(shell uname -m)

ifeq ($(ARCH),armv7l)
LIBS+=-latomic
endif

USHGOV:=##str3##-gov

ifneq (,$(findstring -g,${CXXFLAGS}))
    RPATH:=-Wl,-rpath,../gov
else
    RPATH:=
endif

all: ${USHGOV}

${USHGOV}: ${OBJS}
	$(CXX) ${CXXFLAGS} ${RPATH} ${OBJS} ${LIBS} -pthread -lstdc++fs -o ${USHGOV}

%.o: %.cpp
	g++ -fPIC -c ${CXXFLAGS} ${INC} $^ -o $@

clean:
	rm -f ${USHGOV}
	rm -f *.o

.PHONY: all clean

